<style>
  footer {
    background: var(--bg-secondary);
    border-top: 1px solid var(--border-color);
    margin-top: 4rem;
    padding: 3rem 0 1.5rem;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .footer-grid {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1fr;
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .footer-brand .logo {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
    font-weight: 700;
    font-size: 1.25rem;
    color: var(--text-primary);
    margin-bottom: 0.75rem;
  }

  .logo-icon {
    font-size: 1.5rem;
  }

  .logo-text {
    background: linear-gradient(
      135deg,
      var(--accent-primary),
      var(--accent-secondary)
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .tagline {
    color: var(--text-muted);
    font-size: 0.9rem;
    line-height: 1.6;
    max-width: 280px;
  }

  .footer-links h4 {
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .footer-links ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-links li {
    margin-bottom: 0.5rem;
  }

  .footer-links a {
    color: var(--text-secondary);
    text-decoration: none;
    font-size: 0.9rem;
    transition: color var(--transition-fast);
  }

  .footer-links a:hover {
    color: var(--accent-primary);
  }

  .footer-bottom {
    border-top: 1px solid var(--border-color);
    padding-top: 1.5rem;
    text-align: center;
  }

  .footer-bottom p {
    color: var(--text-muted);
    font-size: 0.85rem;
    margin: 0.5rem 0;
  }

  .disclaimer {
    max-width: 600px;
    margin: 1rem auto 0;
    line-height: 1.5;
  }

  .disclaimer a {
    color: var(--accent-primary);
  }

  .footer-legal-links {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .footer-legal-links a {
    color: var(--text-muted);
    text-decoration: none;
    font-size: 0.85rem;
  }

  .footer-legal-links a:hover {
    color: var(--accent-primary);
  }

  .footer-legal-links span {
    color: var(--text-muted);
    font-size: 0.7rem;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .footer-grid {
      grid-template-columns: 1fr 1fr;
      gap: 1.5rem;
    }

    .footer-brand {
      grid-column: 1 / -1;
    }
  }

  @media (max-width: 480px) {
    .footer-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
