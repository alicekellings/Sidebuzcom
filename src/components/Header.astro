---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
import { getCollection } from "astro:content";

// Get all unique categories
const allPosts = await getCollection("blog");
const categories = [
  ...new Set(allPosts.map((post) => post.data.category).filter(Boolean)),
];
---

<header>
  <nav class="container">
    <a href="/" class="logo">
      <span class="logo-icon">ðŸ’°</span>
      <span class="logo-text">{SITE_TITLE}</span>
    </a>

    <div class="nav-links">
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="/tools">Tools</HeaderLink>
      <HeaderLink href="/blog">Blog</HeaderLink>
      <div class="dropdown">
        <span class="dropdown-trigger"
          >Categories <span class="arrow">â–¼</span></span
        >
        <div class="dropdown-menu">
          {
            categories.map((category) => (
              <a
                href={`/category/${category?.toLowerCase().replace(/\s+/g, "-")}/`}
              >
                {category}
              </a>
            ))
          }
        </div>
      </div>
      <HeaderLink href="/about">About</HeaderLink>
    </div>

    <a href="/student-income-finder" class="header-cta">
      Find Your Income Path â†’
    </a>

    <button class="mobile-menu-btn" aria-label="Menu">
      <span></span>
      <span></span>
      <span></span>
    </button>
  </nav>
</header>

<style>
  header {
    background: var(--bg-primary);
    border-bottom: 1px solid var(--border-color);
    position: sticky;
    top: 0;
    z-index: 100;
  }

  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem 1.5rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
    font-weight: 700;
    font-size: 1.25rem;
    color: var(--text-primary);
  }

  .logo:hover {
    text-decoration: none;
  }

  .logo-icon {
    font-size: 1.5rem;
  }

  .logo-text {
    background: linear-gradient(
      135deg,
      var(--accent-primary),
      var(--accent-secondary)
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .nav-links {
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  .nav-links :global(a),
  .dropdown-trigger {
    padding: 0.5rem 1rem;
    color: var(--text-secondary);
    text-decoration: none;
    font-weight: 500;
    font-size: 0.95rem;
    border-radius: var(--radius-md);
    transition: all var(--transition-fast);
    cursor: pointer;
  }

  .nav-links :global(a):hover,
  .dropdown-trigger:hover {
    color: var(--text-primary);
    background: var(--bg-secondary);
  }

  .nav-links :global(a.active) {
    color: var(--accent-primary);
    background: #eff6ff;
  }

  /* Dropdown */
  .dropdown {
    position: relative;
  }

  .dropdown-trigger {
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  .arrow {
    font-size: 0.7rem;
    transition: transform var(--transition-fast);
  }

  .dropdown:hover .arrow {
    transform: rotate(180deg);
  }

  .dropdown-menu {
    display: none;
    position: absolute;
    top: 100%;
    left: 0;
    min-width: 180px;
    background: var(--bg-primary);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-md);
    box-shadow: var(--shadow-lg);
    padding: 0.5rem 0;
    z-index: 10;
  }

  .dropdown:hover .dropdown-menu {
    display: block;
  }

  .dropdown-menu a {
    display: block;
    padding: 0.6rem 1rem;
    color: var(--text-secondary);
    text-decoration: none;
    font-size: 0.9rem;
    transition: all var(--transition-fast);
  }

  .dropdown-menu a:hover {
    color: var(--text-primary);
    background: var(--bg-secondary);
  }

  /* CTA Button */
  .header-cta {
    padding: 0.5rem 1rem;
    background: var(--accent-cta);
    color: white;
    font-weight: 600;
    font-size: 0.9rem;
    border-radius: var(--radius-md);
    text-decoration: none;
    transition: all var(--transition-fast);
  }

  .header-cta:hover {
    background: #d97706;
    transform: translateY(-1px);
    text-decoration: none;
  }

  /* Mobile menu button */
  .mobile-menu-btn {
    display: none;
    flex-direction: column;
    gap: 4px;
    padding: 0.5rem;
    background: none;
    border: none;
    cursor: pointer;
  }

  .mobile-menu-btn span {
    display: block;
    width: 24px;
    height: 2px;
    background: var(--text-primary);
    border-radius: 2px;
  }

  /* Responsive */
  @media (max-width: 900px) {
    .nav-links,
    .header-cta {
      display: none;
    }

    .mobile-menu-btn {
      display: flex;
    }
  }

  @media (max-width: 480px) {
    .logo-text {
      display: none;
    }
  }
</style>
