---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const title = "Time-Income Analyzer | Find Your Best Earning Potential";
const description =
    "Calculate how much you can realistically earn based on your available time. Get personalized side hustle recommendations ranked by hourly earning potential.";
---

<!doctype html>
<html lang="en">
    <head>
        <BaseHead title={title} description={description} />
    </head>
    <body>
        <Header />

        <main class="analyzer-page">
            <!-- Hero Section -->
            <section class="hero">
                <div class="container">
                    <span class="badge">‚è±Ô∏è Time-Based Analysis</span>
                    <h1>Time-Income Analyzer</h1>
                    <p>
                        How much can you really earn? Enter your available time
                        and we'll show you the best side hustles ranked by
                        earning potential.
                    </p>
                </div>
            </section>

            <!-- Analyzer Section -->
            <section class="analyzer-section">
                <div class="container">
                    <div class="analyzer-card" id="analyzer-form">
                        <h2>üìä Analyze Your Earning Potential</h2>

                        <!-- Step 1: Available Time -->
                        <div class="form-group">
                            <label
                                >How many hours per week can you dedicate?</label
                            >
                            <div class="slider-container">
                                <input
                                    type="range"
                                    id="hours-slider"
                                    min="5"
                                    max="30"
                                    value="10"
                                />
