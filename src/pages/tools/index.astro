<style>
    /* Hero Section */
    .tools-hero {
        background: var(--bg-secondary);
        padding: 2rem 0 1.5rem;
        text-align: center;
        border-bottom: 1px solid var(--border-color);
    }

    .tools-hero .container {
        max-width: 900px;
        margin: 0 auto;
        padding: 0 1.5rem;
    }

    .hero-badge {
        display: inline-block;
        padding: 0.3rem 0.8rem;
        background: linear-gradient(135deg, #667eea20, #764ba220);
        color: #7c3aed;
        font-size: 0.75rem;
        font-weight: 600;
        border-radius: 50px;
        margin-bottom: 0.75rem;
        border: 1px solid #667eea40;
    }

    .tools-hero h1 {
        font-size: 2rem;
        font-weight: 700;
        line-height: 1.3;
        margin-bottom: 0.5rem;
        color: var(--text-primary);
        display: inline;
    }

    .gradient-text {
        background: linear-gradient(135deg, var(--accent-primary), #7c3aed);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .tools-hero p {
        font-size: 1rem;
        color: var(--text-secondary);
        max-width: 700px;
        margin: 0 auto;
        line-height: 1.5;
    }

    /* Tools Section */
    .tools-section {
        padding: 4rem 0;
    }

    .tools-section .container {
        max-width: 1000px;
        margin: 0 auto;
        padding: 0 1.5rem;
    }

    .tools-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1.5rem;
    }

    .tool-card {
        position: relative;
        display: block;
        padding: 2rem;
        background: var(--bg-primary);
        border: 1px solid var(--border-color);
        border-radius: var(--radius-lg);
        text-decoration: none;
        transition: all 0.25s ease;
    }

    .tool-card:hover {
        transform: translateY(-4px);
        box-shadow: var(--shadow-lg);
        border-color: var(--accent-primary);
    }

    .tool-card.featured {
        border: 2px solid var(--accent-primary);
        background: linear-gradient(180deg, #eff6ff 0%, var(--bg-primary) 100%);
    }

    .tool-card.disabled {
        opacity: 0.6;
        pointer-events: none;
    }

    .tool-badge {
        position: absolute;
        top: -10px;
        right: 20px;
        padding: 0.3rem 0.75rem;
        background: var(--accent-cta);
        color: white;
        font-size: 0.75rem;
        font-weight: 600;
        border-radius: 50px;
    }

    .tool-icon {
        font-size: 2.5rem;
        margin-bottom: 1rem;
    }

    .tool-card h2 {
        font-size: 1.35rem;
        color: var(--text-primary);
        margin: 0 0 0.75rem;
    }

    .tool-card p {
        color: var(--text-secondary);
        font-size: 0.95rem;
        line-height: 1.6;
        margin: 0 0 1rem;
    }

    .tool-features {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        margin-bottom: 1rem;
    }

    .feature {
        padding: 0.25rem 0.6rem;
        background: var(--bg-secondary);
        color: var(--text-secondary);
        font-size: 0.8rem;
        border-radius: var(--radius-full);
    }

    .tool-meta {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-top: 1rem;
        border-top: 1px solid var(--border-color);
    }

    .tool-time {
        color: var(--text-muted);
        font-size: 0.85rem;
    }

    .tool-cta {
        color: var(--accent-primary);
        font-weight: 600;
        font-size: 0.9rem;
    }

    .tool-card:hover .tool-cta {
        color: #1d4ed8;
    }

    /* Why Section */
    .why-section {
        padding: 4rem 0;
        background: var(--bg-secondary);
    }

    .why-section .container {
        max-width: 1000px;
        margin: 0 auto;
        padding: 0 1.5rem;
    }

    .section-title {
        text-align: center;
        font-size: 2rem;
        margin-bottom: 2.5rem;
        color: var(--text-primary);
    }

    .why-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 1.5rem;
    }

    .why-card {
        text-align: center;
        padding: 1.5rem;
        background: var(--bg-primary);
        border-radius: var(--radius-lg);
        border: 1px solid var(--border-color);
    }

    .why-icon {
        font-size: 2rem;
        margin-bottom: 0.75rem;
    }

    .why-card h3 {
        font-size: 1rem;
        color: var(--text-primary);
        margin: 0 0 0.5rem;
    }

    .why-card p {
        font-size: 0.85rem;
        color: var(--text-muted);
        margin: 0;
        line-height: 1.5;
    }

    /* Responsive */
    @media (max-width: 768px) {
        .tools-hero h1 {
            font-size: 2.25rem;
        }

        .tools-grid {
            grid-template-columns: 1fr;
        }

        .why-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @media (max-width: 480px) {
        .why-grid {
            grid-template-columns: 1fr;
        }
    }
</style>
